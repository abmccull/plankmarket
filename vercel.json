{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "installCommand": "npm install",
  "buildCommand": "next build",
  "git": {
    "deploymentEnabled": false
  },
  "crons": [
    {
      "path": "/api/cron/expire-promotions",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/expire-pending-orders",
      "schedule": "15 * * * *"
    }
  ]
}
